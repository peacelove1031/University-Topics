<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/LinNumberPwCharge"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/BtBackNumberPw"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/leftarrow" />

            <TextView
                android:id="@+id/TitleChangePw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密碼"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="50dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="40sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinNumberPw01"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/TvNumberPwOriginal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原  密  碼："
                android:textSize="26sp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/EtNumberOriginal"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:textSize="24dp"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:background="@drawable/rectangle_one"
                android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinNumberPw02"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/TvNumberPwNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新  密  碼："
                android:textSize="26sp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/EtNumberPwNew"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:textSize="24dp"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:background="@drawable/rectangle_one"
                android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinNumberPw03"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/TvNumberPwCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="確認密碼："
                android:textSize="26sp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/EtNumberPwCheck"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:textSize="24dp"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:background="@drawable/rectangle_one"
                android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/BtLinNumberPw"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/LinNumberPw03">
            <Button
                android:id="@+id/BtPwCheck"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="完成修改"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="24sp"
                android:background="@drawable/rectangle"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>