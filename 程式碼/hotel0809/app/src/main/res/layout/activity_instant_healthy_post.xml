<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".callus_official"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-56dp"
            tools:layout_editor_absoluteY="114dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BtBackEnv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/leftarrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:text="@string/衛教資訊"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/health"
                    android:translationX="20dp"
                    android:translationY="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/title"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="@string/文章標題"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#000"
                    android:background="@drawable/rectangle_one"
                    android:layout_marginRight="50dp"/>

                <Button
                    android:id="@+id/post"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_one"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/張貼日期"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="32sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/healthy_title_1"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:text="@string/正確使用止痛藥"
                    android:background="@drawable/nullbackground"
                    android:textStyle="bold"
                    android:layout_gravity=""
                    android:textSize="18sp"
                    android:gravity="left"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#000"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:id="@+id/post1"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="2022/07/03"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/healthy_title_2"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:text="@string/暈車藥"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="left"
                    android:textColor="#000"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:id="@+id/post2"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="2022/07/15"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView

                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#000"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="32sp" />
            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>