<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallusFragment"
    android:background="@drawable/background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-56dp"
            tools:layout_editor_absoluteY="114dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BtBackEnv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"

                    android:background="@drawable/leftarrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:text="@string/即時限動"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <Button
                android:id="@+id/instant_partner"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rectangle_callus"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="40sp"
                android:text="@string/近期夥伴"
                android:layout_marginBottom="50dp"/>

            <Button
                android:id="@+id/instant_sale"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rectangle_callus"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="40sp"
                android:text="@string/獨家優惠"
                android:layout_marginBottom="50dp"/>

            <Button
                android:id="@+id/instant_healthy"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rectangle_callus"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="40sp"
                android:text="@string/衛教資訊"
                android:layout_marginBottom="50dp"/>
            <Button
                android:id="@+id/instant_policy"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rectangle_callus"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="40sp"
                android:text="@string/政策專區"
                android:layout_marginBottom="50dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:translationX="30dp"
            android:translationY="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/partner"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:translationX="30dp"
            android:translationY="270dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sale"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:translationX="30dp"
            android:translationY="400dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/health"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:translationX="30dp"
            android:translationY="540dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/policy"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>


