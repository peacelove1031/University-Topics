<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".function_number">

    <LinearLayout
        android:id="@+id/LinNumber"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/BtBackNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:background="@drawable/leftarrow" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/會員管理"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinNumberPic"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/LinNumber">

        <ImageButton
            android:id="@+id/b_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/member"
            android:textSize="100sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinNumberAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/LinNumberPic">
        <LinearLayout
            android:id="@+id/LinNumberPw"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@+id/LinNumberAccount">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/password" />

            <TextView
                android:id="@+id/EtNumberPw"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_one"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:textSize="24dp" />

            <Button
                android:id="@+id/BtChangePw"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="修改"
                android:fontFamily="@font/notosansbold"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rectangle_button"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinNumberName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@+id/LinNumberPw">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/n" />

            <TextView
                android:id="@+id/EtNumberName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_one"
                android:inputType="text"
                android:maxLines="1"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:textSize="24dp" />

            <Button
                android:id="@+id/BtChangeName"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="修改"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/notosansbold"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rectangle_button"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinNumberCar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@+id/LinNumberName">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/e" />

            <TextView
                android:id="@+id/EtNumberCar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_one"
                android:inputType="text"
                android:layout_weight="3"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textSize="24dp" />

            <Button
                android:id="@+id/BtChangeCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="修改"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/notosansbold"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rectangle_button"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinNumberEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@+id/LinNumberName">

            <ImageView
                android:id="@+id/numberEmailImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/EtNumberEmail"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/rectangle"
                android:inputType="text"
                android:text="登出"
                android:textColor="#80000000"
                android:focusable="false"
                android:layout_weight="3"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textSize="30dp"
                android:fontFamily="@font/notosansbold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="#00FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
