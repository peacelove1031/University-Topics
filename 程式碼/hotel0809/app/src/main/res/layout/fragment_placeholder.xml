<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallusFragment"
    android:background="@drawable/background">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:background="@color/deep_green"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@color/deep_green"
            android:src="@drawable/icon_resized" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_weight="8"
            android:textColor="#000"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/login"
            android:layout_width="77dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@color/deep_green"
            android:src="@drawable/login_resized" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/在地精選"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="50sp"
                    android:gravity="center"
                    android:layout_marginTop="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:orientation="vertical"
                android:gravity="center">
                <Button
                    android:id="@+id/food"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/rectangle_callus"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:text="@string/老饕食坊"
                    android:layout_marginBottom="50dp"/>

                <Button
                    android:id="@+id/travel"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/rectangle_callus"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:text="@string/套裝行程"
                    android:layout_marginBottom="50dp"/>

                <Button
                    android:id="@+id/season"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/rectangle_callus"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:text="@string/季節限定"
                    android:layout_marginBottom="50dp"/>



            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:translationX="28dp"
            android:translationY="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/food"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:translationX="25dp"
            android:translationY="290dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/suitcase"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:translationX="35dp"
            android:translationY="490dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/season"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>


