<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quick_search_ranking"
    android:background="@drawable/background">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BtBackEnv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/leftarrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="@string/客房Top10"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ranking"
                    android:translationX="20dp"
                    android:translationY="10dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/top1"
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rectangle_callus"
                    android:gravity="center"
                    android:text="　有料旅館"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/top2"
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rectangle_callus"
                    android:gravity="center"
                    android:text="　確實旅館"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/top3"
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rectangle_callus"
                    android:gravity="center"
                    android:text="　實在旅館"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/top4"
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rectangle_callus"
                    android:gravity="center"
                    android:text="　老實旅館"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/top5"
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rectangle_callus"
                    android:gravity="center"
                    android:text="　冷靜旅館"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:translationX="70dp"
            android:translationY="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/no_one"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:translationX="70dp"
            android:translationY="260dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/no_two"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:translationX="70dp"
            android:translationY="360dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/no_three"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="80dp"
            android:translationY="540dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            android:text="5"
            android:textSize="60dp"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="80dp"
            android:translationY="440dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            android:text="4"
            android:textSize="60dp"
            android:textColor="#fff"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
