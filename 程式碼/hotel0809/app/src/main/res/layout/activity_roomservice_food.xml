<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".callus_official"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-56dp"
            tools:layout_editor_absoluteY="114dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BtBackEnv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/leftarrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:text="@string/食在方便"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/food"
                    android:translationX="20dp"
                    android:translationY="10dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/travel_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/選擇餐點"
                android:textSize="50dp"
                android:gravity="center"
                android:fontFamily="@font/notosansbold"
                android:textColor="#ff0000"/>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_roomservice"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/food"
                    />
                <Spinner
                    android:id="@+id/spinner_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/travel_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text=""
                android:textSize="50dp"
                android:gravity="center"
                android:fontFamily="@font/notosansbold"
                android:textColor="#ff0000"/>



            <Button
                android:id="@+id/tv_4"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:text="@string/送出申請"
                android:textSize="50dp"
                android:gravity="center"
                android:fontFamily="@font/notosansbold"
                android:textColor="#000000"
                android:background="@drawable/rectangle"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/tv_5"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:text="@string/查詢紀錄"
                android:textSize="50dp"
                android:gravity="center"
                android:fontFamily="@font/notosansbold"
                android:textColor="#000000"
                android:background="@drawable/rectangle"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>