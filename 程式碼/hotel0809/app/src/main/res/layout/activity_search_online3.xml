<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search_online"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-56dp"
            tools:layout_editor_absoluteY="114dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BtBackEnv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/leftarrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:text="@string/奧利旅宿"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/four_stars"
                    android:translationX="20dp"
                    android:translationY="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hotel_1"
                    android:layout_width="370dp"
                    android:layout_height="500dp"
                    android:layout_weight="1"
                    android:background="@drawable/online_4"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_gravity="right"
                    android:background="@drawable/rectangle_online_2"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp"
                    >
                    <Spinner
                        android:id="@+id/spinner_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
                <Button
                    android:id="@+id/tv_4"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:text="送出申請"
                    android:textSize="50dp"
                    android:gravity="center"
                    android:fontFamily="@font/notosansbold"
                    android:textColor="#000000"
                    android:background="@drawable/rectangle"
                    android:layout_margin="20dp"/>

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:translationX="20dp"
            android:translationY="540dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/online_5"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>